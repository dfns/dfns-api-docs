        "PaymentInitiation",
        "EmployeeAdded",
        "EmployeeDetailsUpdated",
        "EmployeeRemoved"
      ]
    },
    "isImmutable": { "type": "boolean" },
    "description": { "type": "string" },
    "name": { "type": "string" },
    "controlIds": {
      "type": "array",
      "items": [{ "type": "string" }],
      "minItems": 1,
      "additionalItems": true
    },
    "ruleIds": {
      "type": "array",
      "items": [{ "type": "string" }],
      "minItems": 1,
      "additionalItems": true
    },
    "status": { "type": "string", "enum": ["Enabled", "Disabled", "Archived"] }
  },
  "required": [
    "activityKind",
    "isImmutable",
    "description",
    "controlIds",
    "ruleIds",
    "status"
